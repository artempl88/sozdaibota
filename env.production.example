# Переменные окружения для production развертывания
# Скопируйте этот файл в .env и заполните своими значениями

# Домен для развертывания
DOMAIN=your-domain.com

# OpenAI API ключ
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Token от @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin Chat ID (ваш Telegram ID)
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Ключ шифрования (32+ символов)
ENCRYPTION_KEY=your_secure_encryption_key_32_chars_minimum_2024

# MongoDB настройки (можно оставить по умолчанию)
MONGO_ROOT_PASSWORD=secure_password_2024
MONGO_APP_PASSWORD=sozdaibota_password_2024

# Дополнительные настройки
NODE_ENV=production
PORT=3001

# Настройки безопасности
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Настройки логирования  
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m 